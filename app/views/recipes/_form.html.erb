  <%= form_for @recipe do |f| %>
    <p><%= f.label :name %>
       <%= f.text_field :name %>
    </p>
    <p><%= f.label :prep_time %>
       <%= f.text_field :prep_time %>
    </p>
    <p><%= f.label :cook_time %>
       <%= f.text_field :cook_time %>
    </p>
    <p><%= f.label :ingredients %>
       <%= f.text_area :ingredients %>
    </p>
    <p><%= f.label :instructions %>
       <%= f.text_area :instructions %>
    </p>
    <p><%= f.label :source %>
       <%= f.text_field :source %>
    </p>
    <div class='checkbox-container'>
      <%= collection_check_boxes :recipe, :tag_ids, @tags, :id, :name %>
    </div>
      <%= f.submit %>
    </p>
  <% end %>


