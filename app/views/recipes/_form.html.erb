  <div>
    <%= form_for @recipe do |f| %>
      <p><%= f.label :name %><br/>
         <%= f.text_field :name %>
      </p>
      <p><%= f.label :prep_time %><br/>
         <%= f.text_field :prep_time %>
      </p>
      <p><%= f.label :cook_time %><br/>
         <%= f.text_field :cook_time %>
      </p>
      <p><%= f.label :ingredients %><br/>
         <%= f.text_field :ingredients %>
      </p>
      <p><%= f.label :instructions %><br/>
         <%= f.text_area :instructions %>
      </p>
      <p><%= f.label :source %><br/>
         <%= f.text_field :source %>
      </p>
      <div class='checkbox-container'>
        <%= collection_check_boxes :recipe, :tag_ids, @tags, :id, :name %>
      </div>
      <p>
        <%= f.submit %>
      </p>
    <% end %>
  </div>


